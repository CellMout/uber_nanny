<h1>My nannies</h1>

<% current_user.nannies.each do |nanny| %>
  <div>
    <li><%= nanny.name %></li>
    <% nanny_bookings = Booking.where(nanny: nanny) %>
    <% nanny_bookings.each do |booking| %>
      <li><%= booking.user.first_name %> <%= booking.user.last_name %> email: <%= booking.user.email %> || status: <%= booking.status %> || from: <%= booking.start_time %> to: <%= booking.end_time %>  You can: <%= link_to "accept", accept_booking_path(booking) %> or <%= link_to "decline", decline_booking_path(booking) %></li>
    <% end %>
  </div>
<% end %>
    <%= link_to "Declare a nanny", new_nanny_path, class: "btn btn-primary"%>

<h1>My requests</h1>
<% current_user.bookings.each do |booking| %>
  <li><%= booking.nanny.name %> <%= booking.status %> <%= booking.start_time %></li>
<% end %>
