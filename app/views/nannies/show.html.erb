<h1><%= @nanny.name %></h1>
<p><%= @nanny.description %></p>


<% if @nanny.photo.attached? %>
  <%= cl_image_tag @nanny.photo.key, alt: "Profile photo of #{@nanny.name}", height: 300, width: 400, crop: :fill %>
<% else %>
  <%= cl_image_tag "0awben1djbrwe3z575gpivko4apy", alt: "Profile photo of #{@nanny.name}", height: 300, width: 400, crop: :fill %>
<% end %>

<h1>Créer une réservation</h1>

<%= simple_form_for [@nanny, @booking] do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :address %>
  </div>

  <%= f.button :submit, "Créer la réservation", class: 'btn btn-primary' %>
<% end %>



<%= link_to 'Back to List', nannies_path, class: 'btn btn-primary' %>
