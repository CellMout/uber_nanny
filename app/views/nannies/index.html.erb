              <%= cl_image_tag nanny.photo.key, alt: "Profile photo of #{nanny.name}", height: 100, width: 100, crop: :fill, class: " profile-photo mb-3" %>
            <% else %>
              <%= cl_image_tag "0awben1djbrwe3z575gpivko4apy", alt: "Profile photo of #{nanny.name}", height: 100, width: 100, crop: :fill, class: "profile-photo mb-3" %>
            <% end %>
         <div class="card-product-infos">
            <h2><%= link_to nanny.name, nanny_path(nanny), class: "text-decoration-none text-dark fw-bold" %></h2>
            <p><%= nanny.description %></p>
            <p><%= nanny.hour_rate %>â‚¬/h</p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
