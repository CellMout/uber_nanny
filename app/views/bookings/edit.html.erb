<div class="container align-items-center p-3">
  <div class="reservation-form">
    <h1>Edit booking</h1>

    <%= simple_form_for [@booking], class: do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <%= f.input :address %>
      </div>
      <div class="d-flex justify-content-between">
        <%= f.button :submit, "Edit booking", class: 'btn btn-primary' %>
        <%= link_to "cancel", profile_path, class: "btn btn-outline-secondary" %>
      </div>

    <% end %>
  </div>
</div>
